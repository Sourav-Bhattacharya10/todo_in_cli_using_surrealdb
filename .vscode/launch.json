    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb Ubuntu) Launch Custom by Deviac",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/todo_in_cli",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "preLaunchTask": "rust: cargo build",
            "environment": [
                // {"name": "json_file_path", "value": "${workspaceFolder}/TodoList.json"}
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(Windows) Launch Custom By Deviac",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/todo_in_cli.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        }
    ]
}